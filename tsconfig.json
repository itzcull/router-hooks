{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "types": []
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}